<div class="container mt-5">
    <span class="navbar-text ml-2 pt-5">
    Поиск номерам
  </span>

    <form class="form-inline" method="get" action="/content_admin">
        <input class="form-control ml-2" type="text" name="filter_content_admin" value="{{#filter_content_admin}}{{filter_content_admin}}{{/filter_content_admin}}" >
        <button type="submit" class="btn btn-outline-dark ml-2">Найти</button>

    </form>

    <table class="table table-striped" border="1" cellpadding="5">
        <thead class="thead-dark">

        <th scope="col">Номер</th>
        <th scope="col">Тип</th>
        <th scope="col">Сервис</th>
        <th scope="col">Провайдер</th>
        <th scope="col">Тариф</th>
        <th scope="col">Шаг тарификации</th>
        <th scope="col">Del</th>
        <th scope="col">Edit</th>

        </thead>
        {{#content}}
            <div> <!-- -->
                <tr>

                    <th>{{#number}}{{number}}{{/number}}</th>
                    <th>{{#type}}{{type}}{{/type}}</th>
                    <th>{{#service}}{{service}}{{/service}}</th>
                    <th>{{#provider}}{{provider}}{{/provider}}</th>
                    <th>{{#tariff}}{{tariff}}{{/tariff}}</th>
                    <th>{{#rounding}}{{rounding}}{{/rounding}}</th>
                    <th><a href="/delete_content/{{id}}">Del</a></th>
                    <th><a href="/edit_content/{{id}}">Edit</a></th>

                </tr>
            </div>
        {{/content}}
    </table>
</div>



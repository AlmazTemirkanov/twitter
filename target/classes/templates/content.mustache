<div class="container mt-5">
    <span class="navbar-text ml-2 pt-5">
    Поиск номерам и названиям
  </span>

    <form class="form-inline" method="get" action="/content">
        <input class="form-control ml-2" type="text" name="filter_content" placeholder="1234"
               id="ContentPhrase" onkeyup="ContentSearch()" value="{{#filter_content}}{{filter_content}}{{/filter_content}}" >
        <button type="submit" class="btn btn-outline-dark ml-2">Найти</button>
    </form>


    <table class="table table-striped" id="Content_id" border="1" cellpadding="5">
        <thead class="thead-dark">

        <th scope="col">Номер</th>
        <th scope="col">Тип</th>
        <th scope="col">Сервис</th>
        <th scope="col">Провайдер</th>
        <th scope="col">Тариф</th>
        <th scope="col">Шаг тарификации</th>

        </thead>
        {{#content}}
            <div> <!-- -->
                <tr>

                    <th>{{#number}}{{number}}{{/number}}</th>
                    <th>{{#type}}{{type}}{{/type}}</th>
                    <th>{{#service}}{{service}}{{/service}}</th>
                    <th>{{#provider}}{{provider}}{{/provider}}</th>
                    <th>{{#tariff}}{{tariff}}{{/tariff}}</th>
                    <th>{{#rounding}}{{rounding}}{{/rounding}}</th>

                </tr>
            </div>
        {{/content}}
    </table>

    <script type="text/javascript">

        function ContentSearch() {
            var phrase = document.getElementById('ContentPhrase');
            var table = document.getElementById('Content_id');
            var regPhrase = new RegExp(phrase.value, 'i');
            var flag = false;
            for (var i = 1; i < table.rows.length; i++) {
                flag = false;
                for (var j = table.rows[i].cells.length - 1; j >= 0; j--) {
                    flag = regPhrase.test(table.rows[i].cells[j].innerHTML);
                    if (flag) break;
                }
                if (flag) {
                    table.rows[i].style.display = "";
                } else {
                    table.rows[i].style.display = "none";
                }

            }
        }

    </script>

</div>



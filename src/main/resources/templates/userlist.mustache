        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link ml-4" href="/">Главная</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ml-4" href="/map">Карта</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ml-4" href="/content">Провайдеры</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ml-4" href="/vip">VIP</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ml-4" href="/sms">SMS</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ml-4" href="/pull">Пулы</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ml-4" href="/privet">Привет+</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    CRM
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/crm">SR Prepaid</a>
                    <a class="dropdown-item" href="/crmpost">SR Postpaid</a>
                </div>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Роуминг
                </a>

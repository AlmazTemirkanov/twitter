                    <a class="dropdown-item" href="/prepaid">Роуминг Pre</a>
                    <a class="dropdown-item" href="/postpaid">Роуминг Post</a>
                </div>
            </li>

        </ul>
    </div>
</nav>

<div class="container mt-5">
  <span class="navbar-text ml-2 pt-5">
    Список пользователей
  </span>
    <div class="container mt-2 mb-3 ">
        <button type="submit" class="btn btn-outline-dark"><a href="/registration">Add new</a></button>
    </div>

<table class="table table-striped" border="1" cellpadding="5">
    <thead class="thead-dark">

    <th scope="col">Name</th>
    <th scope="col">Password</th>
    <th scope="col">Role</th>



    </thead>
    {{#users}}
        <div> <!-- -->
            <tr>

                <th>{{username}}</th>
                <th>{{#password}}{{password}}{{/password}}</th>
                <th>{{#roles}}{{roles}}{{/roles}}</th>



            </tr>
        </div>
    {{/users}}
</table>

</div>

<!-- Подключаем jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Подключаем Bootstrap JS -->

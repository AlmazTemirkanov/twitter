<div class="container mt-5 pt-5">

<span class="navbar-text ml-3">
    Поиск по всем полям
  </span>
    <form class="form-inline" method="get" action="/privet">

        <div class="container mt-2">
            <input class="form-control ml-2" type="text" name="filter_privet"
                   id="PrivetPhrase" onkeyup="PrivetSearch()" value="{{#filter_privet}}{{filter_privet}}{{/filter_privet}}" placeholder="Исполнитель">
            <button type="submit" class="btn btn-outline-dark">Найти</button>
        </div>

    </form>

    <table class="table table-striped" id="Privet_id" border="1" cellpadding="5">
        <thead class="thead-dark">

        <th scope="col" >Код песни</th>
        <th scope="col">Название песни</th>
        <th scope="col">Исполнитель</th>
        <th scope="col">Жанр</th>


        </thead>
        {{#privet}}
            <div> <!-- -->
                <tr>

                    <th>{{#code}}{{code}}{{/code}}</th>
                    <th>{{#title}}{{title}}{{/title}}</th>
                    <th>{{#author}}{{author}}{{/author}}</th>
                    <th>{{#genre}}{{genre}}{{/genre}}</th>


                </tr>
            </div>
        {{/privet}}
    </table>
    <script type="text/javascript">

        function PrivetSearch() {
            var phrase = document.getElementById('PrivetPhrase');
            var table = document.getElementById('Privet_id');
            var regPhrase = new RegExp(phrase.value, 'i');
            var flag = false;
            for (var i = 1; i < table.rows.length; i++) {
                flag = false;
                for (var j = table.rows[i].cells.length - 1; j >= 0; j--) {
                    flag = regPhrase.test(table.rows[i].cells[j].innerHTML);
                    if (flag) break;
                }
                if (flag) {
                    table.rows[i].style.display = "";
                } else {
                    table.rows[i].style.display = "none";
                }

            }
        }

    </script>
</div>


<div class="mx-auto" style="width: 1250px;">
    <div class="input-group input-group m-5 pt-5">

        <form class="px-4 py-8 col-sm-5" action="/update_sms" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">

            <div class="form-group" >

                <input type="hidden" class="form-control" value="{{#id}}{{id}}{{/id}}" name="id" >
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">

            </div>


            <div class="form-group" >
                <label for="date" >Дата</label>
                <input type="date" class="form-control" value="{{#date}}{{date}}{{/date}}" name="date" >
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">

            </div>
            <div class="form-group">
                <label for="topic">Тематика</label>
                <input type="text" class="form-control" value="{{#topic}}{{topic}}{{/topic}}" name="topic" >
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">

            </div>

            <div class="form-group">
                <label for="initiator">Инициатор</label>
                <input type="text" class="form-control" value="{{#initiator}}{{initiator}}{{/initiator}}" name="initiator" >
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            </div>

            <div class="form-group">
                <label for="text_topic">Текст смс</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" name="text_topic" placeholder="Текст SMS-рассылки"
                          rows="3"></textarea>
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            </div>


            <div class="form-group">
                <label for="pull">Комментарии</label>
                <input type="text" class="form-control" value="{{#pull}}{{pull}}{{/pull}}" name="pull" >
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">

            </div>

            <div class="form-group">
                <label for="comments">Комментарии</label>
                <input type="text" class="form-control" value="{{#comments}}{{comments}}{{/comments}}" name="comments" >
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">

            </div>


            <button type="submit" class="btn btn-dark ">Обновить</button>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        </form>
    </div>
</div>



<div class="container mt-5 pt-5">
<span class="navbar-text ml-3">
    Поиск по датам
  </span>
    <form class="form-inline" method="get" action="/sms">

        <div class="container mt-2">
            <input class="form-control" type="date" name="filter_sms" value="{{#filter_sms}}{{filter_sms}}{{/filter_sms}}" >
            <button type="submit" class="btn btn-outline-dark ml-2">Найти</button>
        </div>

    </form>



    <table class="table table-striped" border="1" cellpadding="5">
        <thead class="thead-dark">

        <th scope="col">Дата</th>
        <th scope="col">Тематика</th>
        <th scope="col">Инициатор</th>
        <th scope="col">Текст рассылки</th>
        <th scope="col">Пул</th>
        <th scope="col">Комментарии</th>


        </thead>
        {{#sms}}
            <div> <!-- -->
                <tr>

                    <th>{{#date}}{{date}}{{/date}}</th>
                    <th>{{#topic}}{{topic}}{{/topic}}</th>
                    <th>{{#initiator}}{{initiator}}{{/initiator}}</th>
                    <th>{{#text_topic}}{{text_topic}}{{/text_topic}}</th>
                    <th>{{#pull}}{{pull}}{{/pull}}</th>
                    <th>{{#comments}}{{comments}}{{/comments}}</th>


                </tr>
            </div>
        {{/sms}}
    </table>
